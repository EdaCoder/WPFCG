        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <uc:BeveledBorder
            Height="500"
            Margin="10,0,0,50"
            Background="Transparent"
            BorderThickness="1"
