                        Canvas.Top="20"
                        Width="140"
                        Height="140"
                        Background="#1a2640"
                        BorderBrush="SkyBlue"
                        BorderThickness="1"
                        CornerRadius="180">
                        <StackPanel>
                            <WrapPanel Margin="0,30,0,0">
