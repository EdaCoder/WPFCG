                    <Grid>
                        <hc:Arc
                            Width="180"
                            Height="180"
                            ArcThickness="15"
                            ArcThicknessUnit="Pixel"
                            EndAngle="360"
                            Fill="#252d48"
                            StartAngle="0"
                            Stretch="None" />
                        <hc:Arc
                            x:Name="CPU"
                            Width="180"
                            Height="180"
                            ArcThickness="15"
                            ArcThicknessUnit="Pixel"
                            EndAngle="60"
                            Fill="#01dff5"
                            StartAngle="0"
                            Stretch="None" />
                    </Grid>
                </Canvas>
                <StackPanel Margin="10,180,10,0" VerticalAlignment="Center">
                    <StackPanel>
                        <ProgressBar
                            x:Name="C1"
                            Height="10"
                            hc:BorderElement.CornerRadius="5"
                            Background="#1a2640"
                            Foreground="#ff8500"
                            Value="20" />
                        <WrapPanel Margin="0,5,0,0">
                            <TextBlock VerticalAlignment="Center" Style="{DynamicResource Info}">
                                <Path
                                    Width="10"
                                    Height="10"
                                    Data="{StaticResource Power}"
                                    Fill="White"
                                    Stretch="Fill" />
                            </TextBlock>
                            <UniformGrid Width="260" Columns="2">
                                <TextBlock Style="{DynamicResource Info}" Text="CPU使用率" />
                                <TextBlock
                                    x:Name="CT1"
                                    HorizontalAlignment="Right"
                                    Style="{DynamicResource Info}"
                                    Text="120PWD" />
                            </UniformGrid>
                        </WrapPanel>
                    </StackPanel>
                    <StackPanel Margin="0,20,0,0">
                        <ProgressBar
                            x:Name="C2"
                            Height="10"
